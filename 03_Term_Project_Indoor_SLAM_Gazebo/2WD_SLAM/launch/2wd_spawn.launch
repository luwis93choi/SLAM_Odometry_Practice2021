<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <node
        name="robot_house"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-sdf -file $(find 2WD_SLAM)/model/Robot_House/model.sdf -model robot_house -x 0 -y 0 -z 0"
        output="screen" />

    <node
        name="model_2wd_spawn"
        pkg="gazebo_ros"
        type="spawn_model"
        args="-sdf -file $(find 2WD_SLAM)/model/2WD_model/model.sdf -model 2WD -x 0 -y 0 -z 0.3"
        output="screen" />

    <node
        name="tf_broadcaster"
        pkg="2WD_SLAM"
        type="tf_broadcaster.py"
        output="screen"> 
    </node>  

    <node name="imu_filter_madgwick" pkg="imu_filter_madgwick" type="imu_filter_node">
        <param name="use_mag" type="bool" value="false"/>
        <param name="_publish_tf" type="bool" value="false"/>
        <param name="_world_frame" type="string" value="enu"/>
        <remap from="imu/data_raw" to="/imu"/>
    </node>

    <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping">
        <param name="scan" value="/scan"/>
        <param name="map_update_interval" value="2"/>
        <param name="particles" value="20"/>
	    <param name="delta" value="0.1"/>
        <param name="linearUpdate" value="0.1"/>
        <param name="angularUpdate" value="0.5"/>

        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame"  value="map"/>
    </node>

    <node name='teleop' pkg='teleop_twist_keyboard' type='teleop_twist_keyboard'>
    </node>

</launch>